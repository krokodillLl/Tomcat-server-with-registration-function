<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>registration</servlet-name>
        <jsp-file>/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AuthorisationServlet</servlet-name>
        <servlet-class>servlets.AuthorisationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthorisationServlet</servlet-name>
        <url-pattern>/authorisation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InputServlet</servlet-name>
        <servlet-class>servlets.InputServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InputServlet</servlet-name>
        <url-pattern>/input</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AfterLoggingServlet</servlet-name>
        <servlet-class>servlets.AfterLoggingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AfterLoggingServlet</servlet-name>
        <url-pattern>/afterLogging</url-pattern>
    </servlet-mapping>

</web-app>